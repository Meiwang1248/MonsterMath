<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="46dp">

        <Button
            android:id="@+id/btnShakeToJoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shake your phone to join an existing game"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/btnCreateNewGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="Create a new online game and wait for others to join"
            android:background="@color/colorPrimary"
            android:fontFamily="casual"
            android:textColor="@color/white"
            app:backgroundTint="@null" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="background_image"
            android:scaleType="centerInside"
            android:src="@drawable/background" />

    </LinearLayout>

</RelativeLayout>