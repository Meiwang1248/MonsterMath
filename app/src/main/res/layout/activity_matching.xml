<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="46dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shake your phone to match an opponent!"
            android:textSize="28sp"
            android:fontFamily="casual"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMatchStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting for a match..."
            android:textSize="18sp"
            android:fontFamily="casual"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCancelMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Cancel match"
            android:background="@color/colorPrimary"
            android:fontFamily="casual"
            android:textColor="@color/white"
            app:backgroundTint="@null" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="background_image"
            android:scaleType="centerInside"
            android:src="@drawable/background" />

    </LinearLayout>

</RelativeLayout>