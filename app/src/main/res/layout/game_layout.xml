<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".GameActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glHorizontal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glHorizontal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glVertical1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glVertical2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7"/>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alignmentMode="alignMargins"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/glHorizontal1"
        app:layout_constraintBottom_toTopOf="@id/glHorizontal2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:columnCount="6"
        android:rowCount="2">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="3"
            android:layout_columnSpan="3"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/asset_2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="3"
            android:layout_columnSpan="3"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/asset_3" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="2"
            android:layout_columnSpan="2"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/asset_4" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="2"
            android:layout_columnSpan="2"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/asset_5" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_columnWeight="2"
            android:layout_columnSpan="2"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/asset_6" />

    </GridLayout>

    <TextView
        android:id="@+id/tvTimeCount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="casual"
        android:text="TIME:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvScoreCount"
        app:layout_constraintStart_toStartOf="@id/glVertical2"
        app:layout_constraintEnd_toEndOf="parent"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="20sp"
        android:autoSizeMaxTextSize="80sp"
        android:autoSizeStepGranularity="2sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvScoreCount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="casual"
        android:text="SCORE:"
        app:layout_constraintTop_toBottomOf="@id/tvTimeCount"
        app:layout_constraintBottom_toTopOf="@id/glHorizontal1"
        app:layout_constraintStart_toStartOf="@id/glVertical2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_below="@id/tvTimeCount"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="20sp"
        android:autoSizeMaxTextSize="80sp"
        android:autoSizeStepGranularity="2sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnCompeteHome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/glHorizontal1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/glVertical1"
        android:background="@color/colorPrimary"
        android:fontFamily="casual"
        android:text="HOME"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="20sp"
        android:autoSizeMaxTextSize="80sp"
        android:autoSizeStepGranularity="2sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Question here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/glHorizontal2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="casual"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="24sp"
        android:autoSizeMaxTextSize="80sp"
        android:autoSizeStepGranularity="2sp"
        android:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>